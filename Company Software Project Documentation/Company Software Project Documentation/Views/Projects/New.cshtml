@{
}

@model Company_Software_Project_Documentation.Models.Project


@if (ViewBag.Message != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Message
    </div>
}

<h2 class="text-center mt-5">Adaugare proiect</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">
            @using (Html.BeginForm(actionName: "New", controllerName:
            "Projects"))
            {
                @Html.ValidationSummary()
                @Html.Label("Title", "Titlu Proiect")
                <br />
                @Html.TextBox("Title", null, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Title, null, new { @class = "text-danger" })
                <br />

                <br />
                @Html.Label("Description", "Descriere Proiect")
                <br />
                @Html.TextArea("Description", null, new { @class = "form-control" })
                @Html.ValidationMessage("Description", null, new
                    {@class = "text-danger"})
                <br />
                
                <br />
                <button class="btn btn-success" type="submit">Adauga proiect </button>
            }
        </div>
    </div>
</div>