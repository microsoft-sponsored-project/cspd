@{
}

<h2>Articles</h2>
<br />

@if (ViewBag.message != null)
{
    <div class="alert @ViewBag.Alert" role="alert">
        @ViewBag.message
    </div>
}


@foreach (Company_Software_Project_Documentation.Models.Article art in ViewBag.Articles)
{
    @Html.Partial("ArticleCard", art)
    <br />
}

<br />
@if (ViewBag.afisareButoane != null && ViewBag.afisareButoane == true && ViewBag.esteEditor || ViewBag.esteAdmin == true)
{
    <a href="@Url.Action("New", "Articles")" class="btn btn-success">Create</a>
    <br/><br/>
}